    <form action="/realizar/compra" method="post" class="text-end">
        <input type="hidden" name="CarrinhoId" value="{{idCarrinho}}">
        <input type="hidden" name="valor_total" value="{{total_carrinho}}">
        <button type="submit" class="btn btn-success">Realizar Compra</button>
    </form>

    {{else}}
    <div class="alert alert-info text-center">
        Carrinho vazio.
    </div>
    {{/if}}

    <div class="mt-4 text-center">
        <a href="/paineladm" class="btn btn-secondary">Voltar</a>
    </div>
</div>