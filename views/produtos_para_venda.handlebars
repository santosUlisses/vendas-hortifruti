<div class="container my-5">
    <h2 class="text-center mb-4">Produtos Disponíveis</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each produtos}}
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{this.nome}}</h5>
                    <p class="card-text">Estoque disponível: <strong>{{this.estoque}}</strong></p>
                    <p class="card-text">Preço: <strong>R$ {{this.preco}}</strong></p>
                    <a href="/add/carrinho/{{this.id}}" class="btn btn-primary mt-auto">Adicionar ao Carrinho</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="text-center mt-4">
        <a href="/paineladm" class="btn btn-secondary">Voltar</a>
    </div>
</div>