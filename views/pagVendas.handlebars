<div class="container my-5">
  <div class="text-center mb-4">
    <h1 class="fw-bold"> Painel de Vendas</h1>
    <p class="text-muted">total arrecadado em vendas</p>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card text-center shadow">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Total em Vendas</h5>
        </div>
        <div class="card-body">
          <h1 class="display-5 text-success">{{total}}</h1>
        </div>
        <div class="card-footer">
          <a href="/paineladm" class="btn btn-outline-secondary"> Voltar ao Painel</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <canvas id="graficoVendas" width="400" height="200"></canvas>

  <script>
    const datas = {{{ datas }}};
    const valores = {{{ valores }}};

    const ctx = document.getElementById('graficoVendas').getContext('2d');
    const grafico = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: datas,
        datasets: [{
          label: 'Valor total das vendas',
          data: valores,
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderColor: 'rgb(75, 192, 192)',
          borderWidth: 2,
          fill: true,
          tension: 0.3
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>

</div>